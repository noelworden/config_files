              li.footer-sitemap__list__item
                = link_to resources_path(tag: 'Report'), { class: "link-dim" } do |link|
                  span.type--e5.type--white Reports
              li.footer-sitemap__list__item
                = link_to resources_path(tag: 'Video'), { class: "link-dim" } do |link|
                  span.type--e5.type--white Videos
              li.footer-sitemap__list__item
                = link_to resources_path(tag: 'Webinar'), { class: "link-dim" } do |link|
                  span.type--e5.type--white Webinars

          .footer-sitemap__group
            h3.type--d5.type--grey-medium About
            ul.footer-sitemap__list
              li.footer-sitemap__list__item
                = link_to about_path, { class: "link-dim" } do |link|
                  span.type--e5.type--white About Dataminr
              li.footer-sitemap__list__item
                = link_to team_path, { class: "link-dim" } do |link|
                  span.type--e5.type--white Team
              li.footer-sitemap__list__item
                = link_to careers_path, { class: "link-dim" } do |link|
                  span.type--e5.type--white Careers
              li.footer-sitemap__list__item
                = link_to events_path, { class: "link-dim" } do |link|
                  span.type--e5.type--white Events
              li.footer-sitemap__list__item
                = link_to press_index_path, { class: "link-dim" } do |link|
                  span.type--e5.type--white Press
              li.footer-sitemap__list__item
                = link_to contact_path, { class: "link-dim" } do |link|
                  span.type--e5.type--white Contact Us

      //  Copyright
      //  ==========================================================================
      .footer-legal
        hr.footer-legal__hr.is-hidden-sm
        ul.footer-legal__list
          li.footer-legal__list__item
            p.type--e6.type--grey-medium &copy; #{Time.zone.now.year} Dataminr
          li.footer-legal__list__item
            = link_to terms_of_use_path, { class: "footer-nav__item__link link-dim" } do |link|
              span.type--d6.type--grey-medium Terms of Use
          li.footer-legal__list__item
            = link_to privacy_policy_path, { class: "footer-nav__item__link link-dim" } do |link|
              span.type--d6.type--grey-medium Privacy Policy
