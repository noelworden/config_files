        .job-opening-list
          // Account Management Intern
          - data.internships.internships.each do |opening|
            .job-opening.js-job
              button.job-opening__button.type--left
                i.icon.icon-plus-minus.type--inline-block
                  .icon-plus-minus__group
                    span.icon-plus-minus__group__one
                    span.icon-plus-minus__group__two

                h3.job-opening__title.type--inline-block
                  span.type--c10.type--white.type--uppercase = "#{opening.position},"
                  span< class="type--d4 type--white" = opening.state

              .job-opening__drawer.js-job-info
                .job-opening__drawer__interior
                  p.type--a7.type--purple-dusty-light = opening.description.html_safe

                  .job-opening__drawer__responsibilities
                    - if opening.responsibilities.present?
                      p.type--d5.type--peach.type--uppercase RESPONSIBILITIES
                      ul.list-simple
                        - opening.responsibilities.each do |r|
                          li.list-simple__item.type--a7.type--purple-dusty-light = r

                hr.line-hr.line-hr--full-width.line-hr--margin-bottom-5.line--black-10
